#!/bin/bash

old_hdfs=hdfs://hobot-bigdata/user
#new_hdfs=hdfs://hobot-bigdata-aliyun/user
new_hdfs=hdfs://hobot-mosdata/user

path=.
if [ -n "$1" ];then
    path=$1
fi

hdfs=$new_hdfs
if [ -n "$2" ];then
    hdfs=$old_hdfs
fi

user=`whoami`
if [ -n "$3" ];then
    user=$3
fi

hadoop fs -ls $hdfs/$user/$path 
